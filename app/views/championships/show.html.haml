.championship
  .row
    .col-sm-8
      %h1
        = @championship.name

    .col-sm-4
      - if !@championship.start? && current_user.admin?(current_community)
        = button_to "Start #{@championship.name}", { controller: "championships", action: "start", championship_id: @championship.id, community_code: @championship.community.code }  , method: :post, class: "btn btn-lg btn-primary btn-block btn-create-championship"

  - if @championship.start?
    = render 'after_start'

  - else
    = render 'before_start'
