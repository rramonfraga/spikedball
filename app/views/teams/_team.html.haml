%section
  .row
    = render 'players/grid_stats'
    - team.players_by_game.each_with_index do |player, index|
      - if player.miss_next_game?
        = render 'players/injured_player', player: player, index: index + 1
      - else
        = render 'players/player', player: player, index: index + 1

%section
  .row
    .col-sm-4
      Re-Rolls:
      = team.re_rolls
    .col-sm-4
      Fan Factor:
      = team.fan_factor
    .col-sm-4
      Assistant Coaches:
      = team.assistant_coaches
    .col-sm-4
      Cheerleaders:
      = team.cheerleaders
    .col-sm-4
      Apothecaries:
      = team.apothecaries
    .col-sm-4
      %a.btn.btn-blood{href: team_path(team.id, format: :pdf), target: :blank}
        Download PDF
